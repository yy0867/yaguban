<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_minus_innings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/minus_icon"
            app:backgroundTint="@color/lose"
            app:layout_constraintBottom_toBottomOf="@+id/textView_innings"
            app:layout_constraintStart_toEndOf="@+id/textView_strike_out"
            app:layout_constraintTop_toTopOf="@+id/textView_innings" />

        <Button
            android:id="@+id/button_plus_innings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/plus_icon"
            app:backgroundTint="@color/win"
            app:layout_constraintBottom_toBottomOf="@+id/textView_innings"
            app:layout_constraintEnd_toStartOf="@+id/textView_era"
            app:layout_constraintTop_toTopOf="@+id/textView_innings" />

        <TextView
            android:id="@+id/textView_innings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4.1"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView16"
            app:layout_constraintEnd_toStartOf="@+id/guideline14"
            app:layout_constraintStart_toStartOf="@+id/guideline14"
            app:layout_constraintTop_toTopOf="@+id/textView16" />

        <Button
            android:id="@+id/button_minus_lose_point"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/minus_icon"
            app:backgroundTint="@color/lose"
            app:layout_constraintBottom_toBottomOf="@+id/textView15"
            app:layout_constraintStart_toEndOf="@+id/textView_strike_out"
            app:layout_constraintTop_toTopOf="@+id/textView15" />

        <TextView
            android:id="@+id/textView_lose_point_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:text="0"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView15"
            app:layout_constraintStart_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toTopOf="@+id/textView15" />

        <Button
            android:id="@+id/button_plus_lose_point"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/plus_icon"
            app:backgroundTint="@color/win"
            app:layout_constraintBottom_toBottomOf="@+id/textView_lose_point_count"
            app:layout_constraintEnd_toStartOf="@+id/textView_era"
            app:layout_constraintTop_toTopOf="@+id/textView_lose_point_count" />

        <TextView
            android:id="@+id/textView_hitted_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:text="0"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_hitted"
            app:layout_constraintStart_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toTopOf="@+id/textView_hitted" />

        <Button
            android:id="@+id/button_minus_hitted"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/minus_icon"
            app:backgroundTint="@color/lose"
            app:layout_constraintBottom_toBottomOf="@+id/textView_hitted_count"
            app:layout_constraintStart_toEndOf="@+id/textView_strike_out"
            app:layout_constraintTop_toTopOf="@+id/textView_hitted_count" />

        <Button
            android:id="@+id/button_plus_hitted"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/plus_icon"
            app:backgroundTint="@color/win"
            app:layout_constraintBottom_toBottomOf="@+id/textView_hitted_count"
            app:layout_constraintEnd_toStartOf="@+id/textView_era"
            app:layout_constraintTop_toTopOf="@+id/textView_hitted_count" />

        <Button
            android:id="@+id/button_plus_pitchcount"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/plus_icon"
            app:backgroundTint="@color/win"
            app:layout_constraintBottom_toBottomOf="@+id/textView_pitchcount"
            app:layout_constraintStart_toEndOf="@+id/textView_pitchcount"
            app:layout_constraintTop_toTopOf="@+id/guideline10" />

        <Button
            android:id="@+id/button_minus_ball4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/minus_icon"
            app:backgroundTint="@color/lose"
            app:layout_constraintBottom_toBottomOf="@+id/textView_ball4_count"
            app:layout_constraintStart_toEndOf="@+id/textView_strike_out"
            app:layout_constraintTop_toTopOf="@+id/textView_ball4_count" />

        <Button
            android:id="@+id/button_minus_pitchcount"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/minus_icon"
            app:backgroundTint="@color/lose"
            app:layout_constraintBottom_toBottomOf="@+id/textView_pitchcount"
            app:layout_constraintEnd_toStartOf="@+id/textView_pitchcount"
            app:layout_constraintTop_toTopOf="@+id/guideline10" />

        <Button
            android:id="@+id/button_plus_ball4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/plus_icon"
            app:backgroundTint="@color/win"
            app:layout_constraintBottom_toBottomOf="@+id/textView_ball4_count"
            app:layout_constraintEnd_toStartOf="@+id/textView_era"
            app:layout_constraintTop_toTopOf="@+id/textView_ball4_count" />

        <TextView
            android:id="@+id/textView_ball4_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:text="0"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_ball4"
            app:layout_constraintStart_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toTopOf="@+id/textView_ball4" />

        <TextView
            android:id="@+id/textView_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:text="김세영"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.64" />

        <TextView
            android:id="@+id/textView_player_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:text="투수"
            app:layout_constraintBottom_toBottomOf="@+id/textView_player_name"
            app:layout_constraintEnd_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toTopOf="@+id/textView_player_name" />

        <Button
            android:id="@+id/button_delete_player"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/delete_icon"
            app:backgroundTint="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/textView_strike_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="삼진"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toBottomOf="@+id/textView_player_name" />

        <TextView
            android:id="@+id/textView_ball4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="볼넷"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toBottomOf="@+id/textView_strike_out" />

        <TextView
            android:id="@+id/textView_hitted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="피안타"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toBottomOf="@+id/textView_ball4" />

        <TextView
            android:id="@+id/textView_era"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="방어율 3.240"
            android:textColor="@android:color/holo_purple"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_strike_out"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toTopOf="@+id/textView_strike_out" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:text="투구 수"
            android:textColor="@color/win"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_ball4"
            app:layout_constraintStart_toStartOf="@+id/guideline9"
            app:layout_constraintTop_toTopOf="@+id/textView_ball4" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="88dp"
            app:layout_constraintGuide_percent="0.2" />

        <TextView
            android:id="@+id/textView_strike_out_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginLeft="65dp"
            android:text="0"
            android:textSize="22sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_strike_out"
            app:layout_constraintStart_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toTopOf="@+id/textView_strike_out" />

        <Button
            android:id="@+id/button_minus_strike"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/minus_icon"
            app:backgroundTint="@color/lose"
            app:layout_constraintBottom_toBottomOf="@+id/textView_strike_out_count"
            app:layout_constraintStart_toEndOf="@+id/textView_strike_out"
            app:layout_constraintTop_toTopOf="@+id/textView_strike_out_count" />

        <Button
            android:id="@+id/button_plus_strike"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/plus_icon"
            app:backgroundTint="@color/win"
            app:layout_constraintBottom_toBottomOf="@+id/textView_strike_out_count"
            app:layout_constraintEnd_toStartOf="@+id/textView_era"
            app:layout_constraintTop_toTopOf="@+id/textView_strike_out_count" />

        <TextView
            android:id="@+id/textView_pitchcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/textView22"
            app:layout_constraintStart_toStartOf="@+id/textView22"
            app:layout_constraintTop_toTopOf="@+id/guideline10" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="자책점"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toBottomOf="@+id/textView_hitted" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="이닝"
            android:textColor="@color/design_default_color_secondary_variant"
            android:textSize="17sp"
            app:layout_constraintEnd_toStartOf="@+id/guideline13"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="140dp"
            app:layout_constraintGuide_percent="0.3918" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>